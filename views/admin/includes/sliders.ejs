<div class="row">
    <div class="col-lg-12 content-header">
        <h1>Sliders</h1>
        <ol class="breadcrumb">
            <li><a href="/admin/"><i class="fa fa-fw fa-dashboard"></i> Dashboard </a></li>
            <li class="active">Sliders</li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-money"></i> View Sliders
                </h3>
            </div>

            <div class="panel-body">
            <% if (slds !=undefined && slds.length <=0 || slds == undefined) { %>
                <div class="row">
                    <div class="col-12">
                        <div class="text-danger text-center display-2">
                            No Sliders Available
                        </div>
                    </div>
                </div>
            <% } else { %>
                <% for (var i=0; i < slds.length; i ++) { %>
                    <div class="col-lg-4 col-md-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title" align="center">
                                    <%= slds[i].slider_name; %>
                                </h3>
                            </div>
                            <div class="panel-body">
                                <img src="/images/slider/<%= slds[i].slider_image; %>" alt="" class="img-responsive">
                            </div>
                            <div class="panel-footer">
                                <center>
                                    <a class="pull-left" href="/admin/edit_slider=<%= slds[i].slider_id; %>"><i
                                            class="fa fa-pencil"></i> Edit
                                    </a>

                                    <a class="pull-right btn_delete_slider" slider_id="<%= slds[i].slider_id; %>"
                                        style="cursor: pointer;"><i class="fa fa-times"></i> Delete
                                    </a>

                                    <div class="clearfix"></div>
                                </center>
                            </div>

                        </div>
                    </div>
                <% } %>
            <% }  %>
            </div>
        </div>
    </div>
</div>